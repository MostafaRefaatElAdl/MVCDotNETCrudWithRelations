@model List<StudentCourses>


<form asp-action="setGrade" asp-controller="StudentCourses">
    <input hidden name="id" value="@Model[0].StdId" />
    <div class="container">
        <div class="row">
            <table class="table table-hover table-dark text-center">
                <thead>
                    <tr>
                        <th>Course</th>
                        <th>Degree</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <input hidden name="crsIDs" asp-for="@item.Course.CrsID" />
                            <td>@item.Course.CrsName</td>
                            <td> <input name="Degrees" asp-for="@item.Degree" /> </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>


    <input type="submit" class="btn btn-success m-3" value="Submit" />
</form>
