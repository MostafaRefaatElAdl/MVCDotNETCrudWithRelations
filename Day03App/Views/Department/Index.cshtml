@model List<Department>
@{
    //Layout = "_Layout3";
    ViewData["Title"] = "Department Home";
}

    <div class="container mt-5 text-center">
        <table class="table table-hover table-dark text-center">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Location</th>
                    <th>Oprations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        <td>@item.Location</td>
                        <td>
                            <a class="btn btn-primary" href="/department/details/@item.Id"> Details </a>
                            <a class="btn btn-secondary" href="/department/edit/@item.Id"> Edit </a>
                            <a class="btn btn-danger" href="/department/delete/@item.Id"> Delete </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a class="btn btn-outline-success w-100 " href="/department/Create"> Add New Department</a>
    </div>

