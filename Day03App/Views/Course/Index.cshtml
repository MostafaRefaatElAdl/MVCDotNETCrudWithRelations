@using Day04App.Models
@model List<Course>

@{
    //Layout = "_Layout3";
    ViewData["Title"] = "Course Home";
}

    <div class="container mt-5 text-center">
        <table class="table table-hover table-dark text-center">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Oprations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CrsID</td>
                        <td>@item.CrsName</td>
                        <td>
                            <a class="btn btn-primary" href="/Course/details/@item.CrsID"> Details </a>
                            <a class="btn btn-secondary" href="/Course/edit/@item.CrsID"> Edit </a>
                            <a class="btn btn-danger" href="/Course/delete/@item.CrsID"> Delete </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a class="btn btn-outline-success w-100 " href="/Course/Create"> Add New Course</a>
    </div>

